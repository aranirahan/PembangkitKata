<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Regular" parent="android:TextAppearance">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">#455A64</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Regular20" parent="android:TextAppearance">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">#455A64</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Bold" parent="android:TextAppearance">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">#455A64</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Bold20" parent="android:TextAppearance">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">#455A64</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SemiBold" parent="android:TextAppearance">
        <item name="fontFamily">@font/lato_semibold</item>
        <item name="android:textColor">#455A64</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SemiBold24" parent="android:TextAppearance">
        <item name="fontFamily">@font/lato_semibold</item>
        <item name="android:textColor">#455A64</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OSItalic" parent="android:TextAppearance">
        <item name="fontFamily">@font/opensans_italic</item>
        <item name="android:textColor">#455A64</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
